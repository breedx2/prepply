<!doctype html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon"/>
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon"/>
  <link rel="stylesheet" href="/css/custom.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>noisybox blog</title>
</head>
<body>
  <%- include('./include/nav.ejs') %>
  <div class="row">
    <div class="col-md-8 offset-md-2 text-center">
    <% if(typeof tag === 'undefined'){ %>
      <h1 class='blogtitle'>blog
      <a href="/blog/rss.xml"><img class='feedicon' src='/images/rss-icon.png'/></a>
      <a href="/blog/atom.xml"><img class='feedicon' src='/images/atom-icon.png'/></a>
      </h1>
    <% } else { %>
      <h1 class='blogtitle'>blogs tagged "<%- tag %>"
      <a href="/blog/tags/<%- tag %>/rss.xml"><img class='feedicon' src='/images/rss-icon.png'/></a>
      <a href="/blog/tags/<%- tag %>/atom.xml"><img class='feedicon' src='/images/atom-icon.png'/></a>
      </h1>
    <% } %>
    </div>
  </div>

  <%- include('./include/blogs_pager.ejs') %>

  <% blogs.forEach((blog,index) => { %>
    <% title = blog.title;
       date = blog.date;
       tags = blog.tags;
       content = blog.content;
       selfUrl = blog.selfUrl;
       firstOnPage = index === 0 ? true : false
    %>
    <%- include('./include/single_blog.ejs') %>
  <% })%>

  <div class='row'>&nbsp;</div>
  <%-  include('./include/blogs_pager.ejs') %>
  <div class='row'>&nbsp;</div>
  <div class='row'>&nbsp;</div>
  <%- include('./include/footer.ejs') %>
  <%- include('./include/bootstrap.ejs') %>
</body>
</html>
